#!/bin/bash

container=$1
shift

for n in $* ; do
    if [[ -e ${n} ]]; then
	size=$(du -b ${n} | awk '{printf "%012d",$1}')
    else
	size=$(vls -l ${VOS_DEST}/${container}/${n} | awk '{printf "%012d",$5}')
    fi
    if [[ ! -e ${n}.md5} ]] ; then
	find ${n} | xargs -n1 md5sum 2> /dev/null > ${n}.md5
    fi
    [[ -e ${n} ]] && mv ${n}{,.old}
    time_it download-${size}-vos vcp ${VOS_DEST}/${container}/${n} ${n}
    if [[ -s ${olddir}/${n}.md5 ]]; then
	failed=$(md5sum -c ${olddir}/${n}.md5 | grep -c FAILED)
	if [[ ${failed} != 0 ]]; then
	    echo $(( $(cat download-vos.failed 2> /dev/null) + ${failed} )) > download-vos.failed
	fi
    fi
    [[ -e ${n}.old ]] && rm ${n}.old
done
